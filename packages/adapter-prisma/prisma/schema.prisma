// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String    @id @unique
  username    String    @unique
  authSession Session[]
  authKey     Key[]
}

model Session {
  id            String @id @unique
  userId        String
  activeExpires BigInt
  idleExpires   BigInt
  country       String
  user          User   @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

model Key {
  id             String  @id @unique
  hashedPassword String?
  userId         String
  user           User    @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}
